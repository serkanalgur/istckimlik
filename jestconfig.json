{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "./src",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/__tests__/**",
    "!**/node_modules/**"
  ]
}